<Page x:Class="MarathonApp.Pages.CoordinatorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню координатора">

    <Grid>
        <Button Name="BackButton"
                Width="100"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="5"
                Content="Назад"
                Click="BackButton_Click"/>

        <Button Name="LogoutButton"
                Width="100"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5"
                Content="Logout"/>

        <TextBlock HorizontalAlignment="Center"
                   Foreground="Gray"
                   FontSize="25">Меню координатора</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Width="310" 
                        Height="60"
                        Margin="15"
                        FontSize="20"
                        FontStyle="Italic">Бегуны</Button>

                <Button Width="310" 
                        Height="60"
                        Margin="15"
                        FontSize="20"
                        FontStyle="Italic">Спонсоры</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
